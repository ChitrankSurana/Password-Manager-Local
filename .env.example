# =============================================================================
# Personal Password Manager - Environment Configuration Template
# =============================================================================
#
# This is a template for your .env file.
# Copy this file to .env and fill in your values:
#
#   cp .env.example .env
#
# IMPORTANT: Never commit .env file to version control!
# The .env file contains sensitive configuration values.
#
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment: 'development', 'production', or 'testing'
# Controls which config file is loaded (config/development.py, config/production.py, etc.)
APP_ENV=production

# Enable debug mode (True/False)
# WARNING: NEVER enable DEBUG in production!
DEBUG=False

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database connection timeout in seconds
DB_TIMEOUT=30

# Enable automatic backups (True/False)
DB_BACKUP_ENABLED=True

# Maximum number of backups to keep
DB_MAX_BACKUPS=10

# Backup retention in days
DB_BACKUP_RETENTION_DAYS=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# PBKDF2 iterations for key derivation (min: 100000, recommended: 100000+)
# Higher = more secure but slower
PBKDF2_ITERATIONS=100000

# Bcrypt rounds for password hashing (min: 12, recommended: 12-14)
BCRYPT_ROUNDS=12

# Session timeout in hours
SESSION_TIMEOUT_HOURS=8

# Maximum failed login attempts before account lockout
MAX_FAILED_ATTEMPTS=5

# Lockout duration in minutes after max failed attempts
LOCKOUT_DURATION_MINUTES=30

# Master password cache enabled (True/False)
MASTER_PASSWORD_CACHE_ENABLED=True

# Master password cache timeout in seconds (5 minutes = 300)
MASTER_PASSWORD_CACHE_TIMEOUT=300

# Enable security audit logging (True/False)
AUDIT_LOG_ENABLED=True

# Audit log retention in days
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to console (True/False)
LOG_TO_CONSOLE=True

# Log to file (True/False)
LOG_TO_FILE=True

# Maximum log file size in bytes (10MB = 10485760)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# GUI SETTINGS
# =============================================================================

# Default window width
WINDOW_WIDTH=1000

# Default window height
WINDOW_HEIGHT=700

# Default theme: 'dark' or 'light'
DEFAULT_THEME=dark

# Default color scheme: 'blue', 'green', 'purple', 'red', 'orange'
DEFAULT_COLOR_SCHEME=blue

# Default font size
DEFAULT_FONT_SIZE=12

# Default font scale (0.8 to 1.5)
DEFAULT_FONT_SCALE=1.0

# Auto-clear clipboard after copying password (True/False)
AUTO_CLEAR_CLIPBOARD=True

# Clipboard clear timeout in seconds
CLIPBOARD_CLEAR_TIMEOUT=30

# Passwords displayed per page
PASSWORDS_PER_PAGE=50

# =============================================================================
# WEB INTERFACE SETTINGS (Flask)
# =============================================================================

# Flask host (127.0.0.1 for localhost only, 0.0.0.0 for all interfaces)
# WARNING: Only use 0.0.0.0 if you understand the security implications!
FLASK_HOST=127.0.0.1

# Flask port
FLASK_PORT=5000

# Flask secret key for sessions
# CRITICAL: Generate a random secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY

# Enable CSRF protection (True/False)
FLASK_CSRF_ENABLED=True

# Enable rate limiting (True/False)
FLASK_RATE_LIMIT_ENABLED=True

# Default rate limit
FLASK_RATE_LIMIT_DEFAULT=100 per hour

# Login rate limit (stricter)
FLASK_RATE_LIMIT_LOGIN=5 per minute

# =============================================================================
# PASSWORD GENERATOR SETTINGS
# =============================================================================

# Default password length
DEFAULT_PASSWORD_LENGTH=16

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable caching (True/False)
CACHE_ENABLED=True

# Cache time-to-live in seconds (5 minutes = 300)
CACHE_TTL=300

# Maximum cache size (number of items)
CACHE_MAX_SIZE=1000

# Database connection pool size
DB_POOL_SIZE=5

# Database pool max overflow
DB_POOL_MAX_OVERFLOW=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable web interface (True/False)
FEATURE_WEB_INTERFACE=True

# Enable password health dashboard (True/False)
FEATURE_PASSWORD_HEALTH=True

# Enable import/export features (True/False)
FEATURE_IMPORT_EXPORT=True

# Enable backup/restore features (True/False)
FEATURE_BACKUP_RESTORE=True

# Enable two-factor authentication (True/False)
# Note: 2FA feature not yet implemented
FEATURE_2FA=False

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable desktop notifications (True/False)
NOTIFICATIONS_ENABLED=False

# =============================================================================
# DEVELOPER/TESTING SETTINGS
# =============================================================================

# Testing mode (True/False)
# Only enable for automated testing
TESTING=False

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Lines starting with # are comments
# 2. Format: KEY=VALUE (no spaces around =)
# 3. Boolean values: True, False, true, false, 1, 0, yes, no
# 4. String values: Don't use quotes unless necessary
# 5. Numeric values: Just the number (no quotes)
#
# Examples:
#   DEBUG=True                           # Boolean
#   FLASK_PORT=5000                      # Integer
#   LOG_LEVEL=INFO                       # String
#   FLASK_SECRET_KEY=abc123xyz           # String (no quotes needed)
#   FLASK_RATE_LIMIT=100 per hour        # String with spaces
#
# =============================================================================
# SECURITY BEST PRACTICES
# =============================================================================
#
# 1. NEVER commit .env file to version control
# 2. Add .env to .gitignore
# 3. Generate strong random secrets for FLASK_SECRET_KEY
# 4. Use strong values for PBKDF2_ITERATIONS and BCRYPT_ROUNDS
# 5. Keep SESSION_TIMEOUT_HOURS reasonable (4-24 hours)
# 6. Enable AUDIT_LOG_ENABLED in production
# 7. Set DEBUG=False in production
# 8. Review and adjust rate limits based on your usage
#
# =============================================================================
