# .flake8 - Flake8 Configuration
# Personal Password Manager - Code Style Checker

[flake8]
# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 15

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    data,
    backups,
    logs,
    Documentation

# Ignore specific error codes
# E203: Whitespace before ':' (conflicts with black)
# E501: Line too long (handled by black)
# W503: Line break before binary operator (conflicts with black)
# E402: Module level import not at top of file (sometimes necessary)
# W504: Line break after binary operator
ignore = E203,E501,W503,E402,W504

# Error codes to specifically check
# E: pycodestyle errors
# W: pycodestyle warnings
# F: pyflakes
# C: mccabe complexity
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401,E402
    test_*.py:F401,F811

# Show source code for errors
show-source = True

# Show error statistics
statistics = True

# Count errors
count = True

# Format output
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
